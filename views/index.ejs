      }

      body {

         background-image: url('/assets/Circuit Board.svg');
         background-size: cover;
      }

      #displayFloat {
         display: flex;
         flex: 1;
         justify-content: center;
         align-items: center;

      }

      .bg-white {
         background-color: white !important;
      }

      .csgo-logo {
         background-image: url('/assets/csgo_logo.png');
         background-size: contain;
         background-repeat: no-repeat;
         /* height: 144px;
         width: 600px; */
         flex: 1;
      }

      hr[role="tournament6"] {
         border: 0px solid;
         height: 1px;
         background-color: rgb(122, 179, 212);
         /* background-image: linear-gradient(to right, rgb(157, 60, 49), var(--sweet-brown), rgb(157, 60, 49)); */
         margin: 32px 0px;
         display: block;
      }

      hr[role="tournament6"]::before {
         position: absolute;
         background-color: #f7ece2e0;
         border: 1px solid;
         border-color: var(--sweet-brown);
         padding: 10px;
         transform: rotate(45deg);
         left: 50%;
