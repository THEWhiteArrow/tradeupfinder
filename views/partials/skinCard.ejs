<div class="card skin-card">




   <% if(type=='output-skin' ){ %>
      <div class="skin-card-float border border-1">
         <%= float %>
      </div>
      <span class="targetedSkinsArr-amount d-none">
         <%= amount %>
      </span>
      <% } else if( type=='alternate-skin-checkbox' ){%>
         <div class="skin-card-float border border-1">
            <%= float %>
         </div>
         <span class="alternateSkin-amount d-none">
            <%= amount %>
         </span>
         <% }else if(type=='input-skin' ){ %>
            <div class="skin-card-float border border-1 float-input-skin">
               <%= float %>
            </div>
            <div class="skin-card-number border border-1">
               x<%= amount %>
            </div>
            <% } %>


               <a target="_blank" href="<%= link %>">
                  <img class="card-img-top" src="<%= icon %> " alt="<%= label %>">
               </a>
               <label for="<%= _id %>" class="text-center skin-card-label">
                  <%= label %>
               </label>
               <% if(type=='input-skin' || type=='output-skin' ){ %>

                  <input id="<%= _id %>" value="<%= price %>" type="number" name="<%= _id %>"
                     class="form-control <%= type %> text-center mt-1" step="0.01" min="0" required>

                  <% }else if(type=='alternate-skin-checkbox' ){ %>

                     <input class="btn-check" type="checkbox" value="<%= value %>" id="<%= _id %>" autocomplete="off">
                     <label for="<%= _id %>"
                        class="btn btn-outline-primary btn-checkbox text-center form-label mb-0 mt-1">
                        <%= `${price}${symbol}` %>
                     </label>
                     <% }else if(type=='alternate-skin' ){ %>
                        <label for="<%= _id %>" class="text-center form-label mb-0 mt-1">
                           <%= `${price}${symbol}` %>
                        </label>
                        <% } %>
</div>