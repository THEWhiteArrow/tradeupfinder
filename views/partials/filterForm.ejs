<form id="filter-form"
   class="mt-4 p-3 d-flex flex-column bg-light-purple bg-diamonds border border-1 border-light rounded-3">
   <h3 class="mb-0 text-center">Filter The Best Trade-Up : </h3>

   <div class="row">


      <div
         class="mt-3 col-12 col-md-6 col-lg-3 d-flex flex-row flex-md-column align-items-center justify-content-between">
         <label for="maxCost" class="mx-2 mb-0 form-label flex-1 fs-5">Max Cost :</label>
         <input type="number" class="mx-2 form-control form-control-sm flex-1" id="maxCost" name="maxCost" min="0.01"
            step="0.01" placeholder="Type Your Budget">
      </div>

      <div
         class="mt-3 col-12 col-md-6 col-lg-3 d-flex flex-row flex-md-column align-items-center justify-content-between">
         <label for="minProfitability" class="mx-2 mb-0 form-label flex-1 fs-5">Min Profitability :</label>
         <input type="number" class="mx-2 form-control form-control-sm flex-1" name="minProfitability"
            id="minProfitability" min="0.01" step="0.01" placeholder="Type Min Profitability">
      </div>

      <div
         class="mt-3 col-12 col-md-6 col-lg-3 d-flex flex-row flex-md-column align-items-center justify-content-between">
         <label for="minProfit" class="mx-2 mb-0 form-label flex-1 fs-5">Min Profit :</label>
         <input type="number" class="mx-2 form-control form-control-sm flex-1" id="minProfit" name="minProfit"
            min="0.01" step="0.01" placeholder="Type Min Profit">
      </div>

      <div
         class="mt-3 col-12 col-md-6 col-lg-3 d-flex flex-row flex-md-column align-items-center justify-content-between">
         <label for="minChances" class="mx-2 mb-0 form-label flex-1 fs-5">Min Chances :</label>
         <input type="number" class="mx-2 form-control form-control-sm flex-1" id="minChances" name="minChances"
            min="0.01" max="100" step="0.01" placeholder="Type Min Chances">
      </div>

      <div class="col-12 mt-3 d-flex d-none error-box">
         <h4 class="fs-6 text-warning mb-0 w-100 px-2 rounded-3 ">
            Unable to find the trade-up that would match those criteria!
         </h4>
      </div>

      <div class="mt-3  col-12 d-flex">
         <button type="submit" class="w-100 py-1 btn btn-success ">Check now!</button>
      </div>

   </div>




</form>

<script src="/javascripts/myModules/filterForm.js"></script>