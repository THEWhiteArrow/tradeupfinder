<% layout('layouts/boilerplate')%>

   <link rel="stylesheet" href="/stylesheets/tradeTile.css">

   <header class="container my-5 d-flex flex-column">

      <% let name='currently not avaible' ; %>
         <% if(profitableTrades.length)name=profitableTrades[0].name %>

            <div class="d-flex flex-row justify-content-between align-items-center">

               <h1 class="display-6 my-2 py-2">Trade-Ups : <%= name %>
               </h1>
               <a class="btn btn-dark mt-2 d-flex" href="/">View Main Page</a>

            </div>

            <h1 class="display-6 my-2 py-2">
            </h1>

            <p class="lead text-justify">
               Trade-ups here has been gathered just for YOU. Discover and research the best ones that suits you the
               most. To
               see a certain trade-up just click "View Trade-up"
            </p>



   </header>


   <main class="container pb-4">
      <% if(profitableTrades){ %>

         <ul>

            <% for(let profitableTrade of profitableTrades){ %>

               <% const tradeDetails=profitableTrade.instance.trade %>

                  <%-`
                     ${include('../partials/tradeTile',{elementName:'li',title:false,trade:profitableTrade,details:tradeDetails,manageTrade:profitableTrade,showPageLink:'/trades/'+profitableTrade._id})}`%>

                     <% } %>



         </ul>
         <% } %>

   </main>


   <script src="/javascripts/addingDeletingFavAndHigh/favourites.js"></script>
   <script src="/javascripts/addingDeletingFavAndHigh/highlights.js"></script>